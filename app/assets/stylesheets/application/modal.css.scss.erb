@import "common";

.modal {
  width: 600px;
  background: #fafafa;

  .notice {
    padding: 40px;
    color: $white;
    background: $blue;
    h1 {
      font-size: 12pt;
    }
    p {
      font-size: 10pt;
    }
  }

  .share {
    padding: 40px;
    color: $dark_grey;
    input {
      width: 100%;
      line-height: 18pt;
      border: 1px solid $blue;
      margin-top: 20px;
      color: $dark_grey;
    }
  }
  
  .new_feedback_form{
    padding: 40px;
    color: $dark_grey;
    textarea {
      width: 500px;
      height: 120px;
      margin: 10px 0px;
    }
  }
//border: 3px solid $orange;
}
