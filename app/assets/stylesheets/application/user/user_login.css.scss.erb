@import "common";

.login_partial{
  padding: 30px 30px 20px;
  .register {
    text-align: right;
    a {
      font-weight: bold;
      color: $brown;
      text-decoration: underline;
      font-size: 9pt;
    }
  }
  .login_link {
    display: block;
    //zoom: 1;
    //*display: inline;
    float: left;
    background: $brown;
    padding: 2px 10px 2px 10px;
    width: 30px;
    text-align: center;
    a {
      font-size: 9pt;
      color: $white;
    }
  }
  a.auth {
    color: $white;
    background-color: $light_blue;
    display: block;
    font-size: 10pt;
    margin-bottom: 10px;
    padding: 5px 0px 5px 18px;

    img {
      vertical-align: top;
      height: 18px;
      margin-right: 10px;
    }

    &:hover {
      background-color: #fcfcf0;
      color: $grey;
    }
  }
}
