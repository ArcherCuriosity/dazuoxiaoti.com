

.message_name{ width:590px; height:50px; border-bottom:#dcdcdc solid 1px; line-height:25px; padding:15px 0px;}
.message_name strong{ font-size:16px;}
.message_name time{ color:#898989; font-size:14px;}
.content_wen {width:590px; border-bottom:#dcdcdc solid 1px; overflow:hidden}
.content_wen p { font-size:14px; line-height:24px; padding:15px 0px;text-indent:40px;}



.inputdiv{ width:180px; hanging-punctuation:26px; float:right; margin-top:20px;}
.inputdiv input,.chekdel input{ width:63px; height:26px; border:0; cursor:pointer; margin-left:10px; text-align: center; line-height:26px;} 
.back ,.del{ background:url("<%= asset_path "message/inputbk.jpg" %>") }
.back:hover ,.del:hover{ background:url("<%= asset_path "message/inputclickbk.jpg" %>")}


.xiaoxiform td{ height:30px; font-size:14px; padding-top:15px; }
.trnr td{border-bottom:#CCC dotted 1px; }
.trnav td{border-bottom:#dcdcdc solid 1px;text-align:center;color:#7fb2d7}
.chekdel{ margin-top:10px; float:left; width:180px;}

.pagination{ height:37px;  padding-left:20px; margin-top:10px; padding-top:5px; }
.pagination a,.pagination span{ display:block; height:20px; overflow:hidden; float:left; line-height:20px; margin-left:8px; text-align:center }
.first .first_pre{ background:url("<%= asset_path "message/lefticon.jpg" %>") no-repeat center;width:14px;}
.last .last_next{ background:url("<%= asset_path "message/righticon.jpg" %>") no-repeat center;width:14px;}

