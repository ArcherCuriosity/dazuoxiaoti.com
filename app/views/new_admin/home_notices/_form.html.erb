<%= form_for [:new_admin,@home_notice] do |f| %>

    <div class="order_number">
        <table class="grid_order">
            <tbody>
                <tr height="35">
                    <td class="td01"><b>*</b>标题:</td>
                    <td>
                       <%= f.text_field :title, :size=>60 %>
                    </td>
                </tr>
                
                <tr height="35">
                    <td class="td01"><b>*</b>链接:</td>
                    <td>
                       <%= f.text_field :url, :size=>60 %>
                    </td>
                </tr>

                

                <tr height="35">
                    <td class="td01">置顶:</td>
                    <td>
                     
                      是否置顶 <%= f.check_box :is_top %>
                    
                    </td>
                </tr>
                <tr height="35">
                    <td class="td01"></td>
                    <td>
                    <input name="commit" value="修改" type="submit">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

<% end %>
