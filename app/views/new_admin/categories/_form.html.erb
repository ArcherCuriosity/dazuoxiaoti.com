<%= form_for [:new_admin,@category],:html => { :multipart => true } do |f|%>

    <div class="order_number">
        <table class="grid_order">
            <tbody>
                <tr height="35">
                    <td class="td01"><b>*</b>name：</td>
                    <td>
                       <%= f.text_field :name, :size=>60 %>
                    </td>
                </tr>
                <tr>
                    <td class="td01 td03"><b>*</b>&nbsp;图片：</td>
                    <td class="td02"> 
                         <%= f.file_field :icon, :size=>60 %> <img src="<%=@category.icon.url(:thumb)%>" />
                    </td>
                </tr>
                <tr height="35">
                    <td class="td01">状态</td>
                    <td>
                     
                      是否显示 <%= f.check_box :is_show %>
                    
                    </td>
                </tr>
                <tr height="35">
                    <td class="td01"></td>
                    <td>
                    <input name="commit" value="修改" type="submit">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
<% end -%>
