.project_block_wrapped{class: show ? "displayed block_"+project.id.to_s : "hidden block_"+project.id.to_s, id: "project_block_"+project.id.to_s}
  .project_image= link_to image_tag(project_image_path(project, :main)), random_mobile_questions_path(:question_set => params[:question_set], :project_id => project.id, :r => rand(100)), :id => 'project_link'
  .project_screen
  .project_overview
    .project_title
      = project.name
      -if (project.id == current_project.id)
        'This is current project'
    .project_equation
      = project.equation
    .project_buttons
      /= link_to image_tag(asset_path('static/begin.png')), random_mobile_questions_path(:format => 'js', :question_set => params[:question_set], :project_id => project.id), :class => "button_left"
      = link_to image_tag(asset_path('static/detail_blue.png')), mobile_project_path(project), :class => "button_right"
  .clear
